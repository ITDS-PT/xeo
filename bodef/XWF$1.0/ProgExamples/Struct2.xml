	<program name="Simplest">
		<executewhen><![CDATA[]]></executewhen>
		<code>
			<variables>
				<variable name="Texto">
					<type>char(20)</type>
					<label><![CDATA[Texto]]></label>
					<VAR_ADDRESS/>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<defaultValue/>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</variable>
				<variable name="Numero">
					<type>number</type>
					<label><![CDATA[Número]]></label>
					<VAR_ADDRESS/>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<defaultValue>20</defaultValue>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</variable>
				<variable name="Bool">
					<type>boolean</type>
					<label><![CDATA[Booleano]]></label>
					<VAR_ADDRESS/>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<defaultValue>false</defaultValue>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</variable>
			</variables>
			<participants>
				<participant name="User">
					<type>Object</type>
					<label><![CDATA[Utilizador]]></label>
					<VAR_ADDRESS/>
					<defaultValue/>
				</participant>
			</participants>
			<xepCode>
				<condition><![CDATA[]]></condition>
				<xepCode><![CDATA[Texto = "Super"; Bool = true;]]></xepCode>
			</xepCode>
			<label name="ifstate"/>
			<if>
				<condition><![CDATA[Texto.length() < 10]]></condition>
				<answers>
					<TRUE>
						<code>
							<xepCode>
								<condition/>
								<xepCode><![CDATA[Texto += "Super";Numero+=50;]]></xepCode>
							</xepCode>
						</code>
					</TRUE>
					<FALSE>
						<code>
							<xepCode>
								<condition/>
								<xepCode><![CDATA[Numero += 30;]]></xepCode>
							</xepCode>
						</code>
					</FALSE>
				</answers>
			</if>
			<switch>
				<answers>
					<case>
						<condition><![CDATA[Numero > 100]]></condition>
						<code>
							<xepCode>
								<condition/>
								<xepCode><![CDATA[Numero += 3;]]></xepCode>
							</xepCode>
						</code>
					</case>
					<case>
						<condition><![CDATA[Numero == 100]]></condition>
						<code>
							<xepCode>
								<condition/>
								<xepCode><![CDATA[Numero += 3;]]></xepCode>
							</xepCode>
						</code>
					</case>
					<case>
						<condition><![CDATA[Numero < 100]]></condition>
						<code>
							<xepCode>
								<condition/>
								<xepCode><![CDATA[Numero += 3;]]></xepCode>
							</xepCode>
						</code>
					</case>
				</answers>
			</switch>
			<goto label="ifstate">
				<participant/>
				<condition><![CDATA[Numero > 100]]></condition>
			</goto>
			<xepCode>
				<condition><![CDATA[]]></condition>
				<xepCode><![CDATA[Numero = 40 * 3;]]></xepCode>
			</xepCode>
		</code>
	</program>
