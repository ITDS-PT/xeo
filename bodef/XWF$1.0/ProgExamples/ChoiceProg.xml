	<timeoutProcedure>
		<timerVariavel/>
		<code/>
	</timeoutProcedure>
	<program name="Three">
		<executewhen/>
		<code>
			<defVariables>
				<defVariable name="Texto" input="true">
					<type>char(20)</type>
					<label>Texto</label>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<VAR_ADDRESS><![CDATA[]]></VAR_ADDRESS>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<value/>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</defVariable>
				<defVariable name="Numero" >
					<type>number</type>
					<label>Número</label>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<VAR_ADDRESS><![CDATA[]]></VAR_ADDRESS>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<value>20</value>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</defVariable>
				<defVariable name="Bool">
					<type>boolean</type>
					<label>Booleano</label>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<VAR_ADDRESS><![CDATA[]]></VAR_ADDRESS>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<value>false</value>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</defVariable>
				<defVariable name="Obj">
					<type>object.claim</type>
					<label>Objecto Reclama</label>
					<objectfilter>
						<filter>
							<BOL_condition/>
							<BOQL_query/>
						</filter>
					</objectfilter>
					<VAR_ADDRESS><![CDATA[]]></VAR_ADDRESS>
					<minoccurs>0</minoccurs>
					<maxoccurs>1</maxoccurs>
					<formula/>
					<lov/>
					<defaultValue/>
					<valid/>
					<renderAsLov/>
					<hiddenWhen/>
					<required/>
					<actionType/>
				</defVariable>
			</defVariables>
			<defParticipants>
				<defParticipant name="User">
					<type>object.Object</type>
					<label>Utilizador</label>
					<VAR_ADDRESS/>
					<value>boui(1727785)</value>
				</defParticipant>
			</defParticipants>
			<xepCode>
				<condition/>
				<codetorun>Texto += "Super";</codetorun>
			</xepCode>
			<fillVariable async="true">
        <label>Preencha os campos</label>
				<participant>User</participant>
				<condition/>
				<variables>
					<variable name="Obj"/>
				</variables>
				<useForm/>
			</fillVariable>
      <label name="menu"/>
			<choice>
				<participant>User</participant>
				<label>Escolha uma hipótese</label>
				<answers>
					<answer>
						<label>Editar campo de texto</label>
						<availableWhen><![CDATA[]]></availableWhen>
						<disableWhen><![CDATA[]]></disableWhen>
						<code>
							<fillVariable>
                <label>Editar Texto</label>
        				<participant>User</participant>
        				<condition/>
        				<variables>
        					<variable name="Texto"/>
        				</variables>
        				<useForm/>
        			</fillVariable>
              
            </code>  
					</answer>
					<answer>
						<label>Inserir número</label>
						<availableWhen><![CDATA[]]></availableWhen>
						<disableWhen><![CDATA[]]></disableWhen>
						<code>
							<fillVariable>
                <label>Inserir número</label>
        				<participant>User</participant>
        				<condition/>
        				<variables>
        					<variable name="Numero"/>
        				</variables>
        				<useForm/>
        			</fillVariable>
              <xepCode>
      				   <condition/>
      				   <codetorun>Numero = Numero * 20;</codetorun>
      			  </xepCode>
              <decision>
        				<label>Está correcto não está?</label>
        				<participant>User</participant>
        				<variables>
        					<variable name="Numero"/>
        				</variables>
        				<answers>
        					<TRUE>
        						<label>Sim</label>
        						<code>
        							<goto label="menu">
                      	<participant/>
                      	<condition><![CDATA[]]></condition>
                      </goto>
        						</code>
        					</TRUE>
        					<FALSE>
        						<label>Não</label>
        						<code>
        							<fillVariable>
                        <label>Então insira o valor correcto</label>
                				<participant>User</participant>
                				<condition/>
                				<variables>
                					<variable name="Numero"/>
                				</variables>
                				<useForm/>
                			</fillVariable>
        						</code>
        					</FALSE>
        				</answers>
        			</decision>
						</code>
					</answer>
					<answer>
						<label>Definir booleano</label>
						<availableWhen><![CDATA[]]></availableWhen>
						<disableWhen><![CDATA[]]></disableWhen>
						<code>
							<fillVariable>
                <label>Definir booleano</label>
        				<participant>User</participant>
        				<condition/>
        				<variables>
        					<variable name="Bool"/>
        				</variables>
        				<useForm/>
        			</fillVariable>
						</code>
					</answer>
				</answers>
			</choice>
			<decision>
				<label>Deseja voltar ao menu de edição?</label>
				<participant>User</participant>
				<variables>
					<variable name="Bool"/>
				</variables>
				<answers>
					<TRUE>
						<label>Sim</label>
						<code>
							<goto label="menu">
              	<participant/>
              	<condition><![CDATA[]]></condition>
              </goto>
						</code>
					</TRUE>
					<FALSE>
						<label>Não</label>
						<code>
							<xepCode>
								<condition/>
								<codetorun>Bool = Bool;</codetorun>
							</xepCode>
						</code>
					</FALSE>
				</answers>
			</decision>
		</code>
	</program>
</sentenceTypes>

